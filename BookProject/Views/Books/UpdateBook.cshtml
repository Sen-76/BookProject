@using BookProject.Models
@model List<Category>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="web_title">Update Truyện | Sen</title>
    <link rel="icon" href="~/image/Enmusubi-full-body.png" type="image/gif" sizes="16x16">
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/manga.css">
    <link rel="stylesheet" href="~/css/mangadetail.css">
</head>

<body>
    <video class="video" src="~/video/mylivewallpapers.com-Re-Zero-Rem-Tea-4K.mp4" loop autoplay muted></video>
    @await Html.PartialAsync("Header")
    @await Html.PartialAsync("SideBar")
    <div class="main @ViewBag.LeftActive">
        <div class="link" id="link">
            <a href="/Home/Index"> Trang chủ</a>
            <p> /</p>
            <a href="/Books/Books"> Truyện tranh </a>
            <p> /</p>
            <a href="/Books/AddBook"> Thêm truyện </a>
        </div>
        <div class="new_update">
            <form action="/Books/DoUpdateBook" method="POST">
                <div class="formtop">
                    <div style="width: 30%;" class="formleft">
                        <span>Bìa truyện</span><br />
                        <img style="align-items: center" src="/image/Enmusubi-full-body.png" alt="Bìa sách" width="200" height="200" />
                        <input class="input" type="text" name="BookCover" value="" />
                        @foreach (Category o in Model)
                        {
                            <input type="checkbox" name="Categories" value="@o.CategoryId" 
                            @foreach(BookCategory i in ViewBag.Onecate){
                                if(o.CategoryId == i.CategoryId){
                                    @ViewBag.Checked
                                }
                            }
                            />
                            <span> @o.CategoryName</span> 
                        }
                    </div>
                    <ul style="width: 69%;">
                        <li>
                            <span>Tên truyện</span><br />
                            <input class="input" type="hidden" name="BookId" value="@ViewBag.BookId" />
                            <input class="input" type="text" name="BookName" value="@ViewBag.BookName" />
                        </li>
                        <li>
                            <span>Tên khác</span><br />
                            <input class="input" type="text" name="OtherName" value="@ViewBag.OtherName" />
                        </li>
                        <li>
                            <span>Tác giả</span><br />
                            <input class="input" type="text" name="Author" value="@ViewBag.Author" />
                        </li>
                        <li>
                            <span>Mô tả, Tóm tắt</span><br />
                            <input class="input" type="text" name="Description" value="@ViewBag.Description" />
                        </li>
                        <li>
                            <span>Trạng thái</span><br />
                            <select class="input" name="Status" style="width: 100%">
                                <option @(ViewBag.Status == 1 ? "selected" : "" ) value="1">Đang cập nhật</option>
                                <option @(ViewBag.Status == 2 ? "selected" : "" ) value="2">Đã hoàn thành</option>
                                <option @(ViewBag.Status == 3 ? "selected" : "" ) value="3">Tạm ngừng cập nhật</option>
                                <option @(ViewBag.Status == 4 ? "selected" : "" ) value="4">Đã dừng cập nhật</option>
                            </select>
                        </li>
                        <li>
                            <input class="readmanga" type="submit" name="Description" value="Submit" />
                        </li>
                    </ul>
                </div>

            </form>
        </div>
    </div>

    @await Html.PartialAsync("OtherNav")

    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    <script src="~/js/index.js"></script>
</body>

</html>